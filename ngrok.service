[Unit]
Description=ngrok
After=network.target

[Service]
ExecStart=/opt/ngrok/ngrok -log-level=ERROR -log=/var/log/ngrok/ngrok -config=/opt/ngrok/ngrok.yml start-all
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
IgnoreSIGPIPE=true
Restart=always
RestartSec=3
Type=simple

[Install]
WantedBy=multi-user.target